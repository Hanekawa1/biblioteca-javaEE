<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
	<persistence-unit name="biblioteca" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
   		<jta-data-source>bibliotecaBD</jta-data-source>
		
		<class>locadora.diurno.dal.entidade.Autor</class>
		<class>locadora.diurno.dal.entidade.Editora</class>
		<class>locadora.diurno.dal.entidade.Genero</class>
		<class>locadora.diurno.dal.entidade.Obra</class>
		<class>locadora.diurno.dal.entidade.TipoObra</class>

		<properties>
			<property name="eclipselink.logging.level" value="FINE"/>
			<property name="eclipselink.logging.parameters" value="true"/>
			<property name="eclipselink.ddl-generation" value="create-tables"/>
		</properties>
	</persistence-unit>
</persistence>
